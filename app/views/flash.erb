<% if flash[:errors] && !flash[:errors].empty? %>
	<p id="flash-notice">Sorry, there were the following problems with the form:</p>
	<ul id = "errors">
		<%flash[:errors].each do |error| %>
		<li><%= error %></li>
		<% end %>
	</ul>
<% end %>

<% if flash[:notice] %>
	<div id ="notice">
		<%= flash[:notice] %>
	</div>
<% end %>